<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_round_corner"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_record_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"

            android:scaleType="fitXY"
            android:src="@drawable/icon_record_tag"/>

        <TextView
            android:id="@+id/tv_fuel_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_record_tag"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/tv_litres"
            android:text="92号汽油"
            android:textColor="@color/red"
            android:textSize="24sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/tv_litres"
            style="@style/tv_record_style1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_fuel_type"
            android:text="52.3升"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_total_price"
            style="@style/tv_record_style1"
            android:layout_alignParentLeft="true"
            android:text="325.3元"/>

        <TextView
            android:id="@+id/tv_date"
            style="@style/tv_record_style1"
            android:layout_alignParentRight="true"
            android:text="2017-06-06 08:50"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>